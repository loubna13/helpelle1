<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Help'Elle{% endblock %}</title>

        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css')}}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css')}}">
        {% endblock %}
    </head>
    {% block header %}
            <!-- TITRE -->
            <h1>HELP'ELLE<br>l'annuaire des associations<br> d'aide aux femmes</h1>

            <!--VISAGE FEMME-->
            <img src="{{ asset('images/visagefemme.png')}}" alt="Photo Femme" title="Photo visage femme" id="visage">

            <!--LOGO-->
            <img src="{{ asset('images/logo.png')}}" alt="Logo" title="Logo du site" id="logo">
               

            <nav>
               <ul>
                     <li><a href="{{ path('accueil')}}">Accueil</a></li>
                     <li><a href="{{ path('formulaire.html')}}">Formulaire</a></li>
                     <li><a href="{{ path('annuaire.html')}}">Annuaire</a></li>
                     <li><a href="{{ path('conseils.html')}}">Conseils</a></li>
                     <li><a href="{{ path('prevention.html')}}">Prévention</a></li>
                     <li><a href="{{ path('InscrireMonAssociation.html')}}">Inscrire mon association</a></li>
                     <li><a href="{{ path('monCompte.html')}}">Mon compte</a></li>
                </ul>

                 <li class="nav-item active">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <em> Bonjour {{ app.user.Nom }}</em>  <a href="{{ path('app_login')}}" class="btn-primary">Se déconnecter</a>
                    {% else %}
                    <a href="{{ path('app_login')}}" class="btn-primary">Se connecter</a>   
                    <a href="{{ path('app_register')}}" class="btn-primary">S'inscrire</a>
                    {% endif %}
                </li>

            </nav>


        {% endblock %}
   
           {% block body %}{% endblock %}
    
        {% block javascripts %}{% endblock %}

    </body>
</html>
