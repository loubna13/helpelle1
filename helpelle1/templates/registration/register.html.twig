{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center">S'inscrire</h1>
     
    {{ form_start(registrationForm) }}

    <div class="container">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label >Pseudo</label>
              {{ form_widget(registrationForm.Pseudo ,{ 'attr' :{'placeholder':'Pseudo','class':'nomDeMaClasse', 'class':'form-control'}})}}
            </div>

           <div class="form-group col-md-6">
            <label for="">Nom</label>
             
             {{ form_widget(registrationForm.Nom ,{ 'attr' :{'placeholder':'Nom','class':'nomDeMaClasse', 'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-row">
        
            <div class="form-group col-md-6">
                <label >Prenom</label>
                {{ form_widget(registrationForm.Prenom ,{ 'attr' :{'placeholder':'Prenom','class':'nomDeMaClasse', 'class':'form-control'}}) }}
            </div>

             <div class="form-group col-md-6">
                 <label >Email</label>

             {{ form_widget(registrationForm.email ,{ 'attr' :{'placeholder':'email','class':'nomDeMaClasse', 'class':'form-control'}}) }}
             </div>
            
        </div>
        
         
        <div class="form-row">
            <div class="form-group col-md-6">
               <label >Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {'attr':{'placeholder':'Mot de passe', 'class':'form-control'}
                }) }}
            </div>          
        </div>
        <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr':{'placeholder':'agreeTerms', 'class':'form-check-input'}}) }}
              <label class="form-check-label" for="gridCheck">
                Check me out
              </label>
        </div>
            
                <button type="submit" class="btn-success" > <a href="{{path('app_login')}}"></a>S'inscrire</button>
    </div>  
    {{ form_end(registrationForm) }}
    
{% endblock %}
