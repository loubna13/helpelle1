{% extends 'base.html.twig' %}

{% block title %}Associations index{% endblock %}

{% block body %}
    <h1>Associations index</h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Region</th>
                <th>Mail</th>
                <th>Descriptif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                 <th scope="row">1</th>
                <td>{{ association.id }}</td>
                <td>{{ association.Nom }}</td>
                <td>{{ association.Type }}</td>
                <td>{{ association.adresse }}</td>
                <td>{{ association.telephone }}</td>
                <td>{{ association.region }}</td>
                <td>{{ association.mail }}</td>
                <td>{{ association.descriptif }}</td>
                <td>
                    <a href="{{ path('associations_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('associations_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('associations_new') }}">Create new</a>
{% endblock %}
