
{% block body %}
	{{ form_start(form)}}
	<div class="container">
	        <div class="form-row">
	            <div class="form-group col-md-6">
	                <label >Nom</label>
	              {{ form_widget(form.nom ,{ 'attr' :{'placeholder':'nom','class':'nomDeMaClasse', 'class':'form-control'}})}}
	            </div>
	        </div>

	        <div class="form-row">
	           <div class="form-group col-md-6">
	            <label for="">Prenom</label>
	             
	             {{ form_widget(form.prenom ,{ 'attr' :{'placeholder':'prenom','class':'nomDeMaClasse', 'class':'form-control'}}) }}
	            </div>       
	        </div>

	        <div class="form-row">
	            <div class="form-group col-md-6">
	                <label >Email</label>
	                {{ form_widget(form.mail ,{ 'attr' :{'placeholder':'mail','class':'nomDeMaClasse', 'class':'form-control'}}) }}
	            </div>
	        </div>
	        
	          <div class="form-row">
	            <div class="form-group col-md-6">
	               <label >Motivations</label>
	                {{ form_widget(form.motivations, {'attr':{'placeholder':'Ajoutez votre texte ici ...', 'class':'form-control'}
	                }) }}
	            </div>          
	        </div>
	        <br>
	    <button class="btn">{{ button_label|default('Enregistrer') }}</button>


	</div>    
	{{ form_end(form) }}
{% endblock %}


