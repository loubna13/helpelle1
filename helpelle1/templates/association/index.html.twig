{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Association index</h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Region</th>
                <th>Mail</th>
                <th>Descriptif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.Nom }}</td>
                <td>{{ association.Type }}</td>
                <td>{{ association.Adresse }}</td>
                <td>{{ association.Telephone }}</td>
                <td>{{ association.Region }}</td>
                <td>{{ association.Mail }}</td>
                <td>{{ association.Descriptif }}</td>
                <td>
                    <a href="{{ path('association_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('association_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('association_new') }}">Create new</a>
{% endblock %}
